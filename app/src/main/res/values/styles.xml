        <item name="android:buttonStyle">@style/NumberButton</item>
    </style>
    <style name="NumberButton" parent="android:style/Widget.Button">
        <item name="android:textSize">50sp</item>
        <item name="android:layout_margin">2dip</item>
        <item name="android:background">#FFEE58</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">25</item>
        <item name="android:text">$</item>
    </style>
    <style name="OperationButton" parent="android:style/Widget.Button">
        <item name="android:textSize">50sp</item>
        <item name="android:layout_margin">2dip</item>
        <item name="android:background">#FFEE58</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">25</item>
        <item name="android:text">...</item>
    </style>


