<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="ApplicationStyle" parent="android:Theme">
        <item name="android:buttonStyle">@style/NumberButton</item>
    </style>

    <style name="NumberButton" parent="android:style/Widget.Button">
        <item name="android:textSize">50sp</item>
        <item name="android:layout_margin">2dip</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">25</item>
        <item name="android:text">$</item>
        <item name="android:background">@drawable/roundedbutton</item>
        <item name="backgroundTint">#C0C4C6</item>
        <item name="fontFamily">Roboto-Bold</item>
    </style>

    <style name="OperationButton" parent="android:style/Widget.Button">
